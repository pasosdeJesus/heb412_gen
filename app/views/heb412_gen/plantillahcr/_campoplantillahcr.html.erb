<tr class='nested-fields'>
  <td>
    <% ab = ::Ability.new  %>
    <% v = defined?(vista) ? vista :  
      defined?(@vista) ? @vista :
      defined?(f.object.plantillahcr.vista) ? 
      f.object.plantillahcr.vista :
      defined?(Ability::campos_plantillas['Usuario']) ? 'Usuario' : nil %>
    <% p2 = f.object.plantillahcr ? f.object.plantillahcr.formulario : nil %>
    <% col = Heb412Gen::PlantillaHelper.campos_vista_formulario(v, p2, true) %>
    <%= f.input :nombrecampo,
      collection: col,
      label: false
    %>
  </td>
  <td>
    <%= f.input :columna,
      collection: Heb412Gen::ApplicationHelper::RANGOCOL,
      label: false
    %>
  </td>

  <td>
    <%= f.input :fila, label: false %>
  </td>

  <td>
    <%= f.input :id, as: :hidden %>
    <%= link_to_remove_association t("Eliminar"), f, 
        :class => 'btn btn-sm btn-danger' 
    %>
    <div><%= f.error_notification %></div>
  </td>
</tr>
