<%= simple_form_for @plantillahcr do |f| %>
  <%= f.simple_fields_for :campoplantillahcr,
    child_index: params[:index] do |subf| %>
    <%= turbo_stream.replace "agregar-campoplantillahcr" do %>
      <%= f.submit "Agregar campo",
            formaction: heb412_gen.crear_campoplantillahcr_path(subf.index.to_i + 1),
            formmethod: :post,
            formnovalidate: true,
            class: 'btn btn-sm btn-primary',
            id: "agregar-campoplantillahcr",
            data:  {
              disable_with: false
            } %>
    <% end %>

    <%= turbo_stream.append "camposplantillahcr_marco" do %>
      <%= render "/heb412_gen/plantillahcr/campoplantillahcr", f: subf %>
    <% end %>
  <% end %>
<% end %>
