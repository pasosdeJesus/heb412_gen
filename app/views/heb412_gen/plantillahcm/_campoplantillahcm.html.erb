<%= turbo_frame_tag "campoplantillahcm_#{f.index}", 
  class: 'div-tabla-fila nested-fields' do %>
  <div class="div-tabla-celda">
    <% if defined?(vista) %>
      <%= render partial: 'heb412_gen/plantillahcm/campo_nombrecampo', 
        locals: {f: f, vista: vista} %>
    <% else %>
      <%= render partial: 'heb412_gen/plantillahcm/campo_nombrecampo', 
        locals: {f: f} %>
    <% end %>
  </div>
  <div class="div-tabla-celda">
    <%= f.input :columna,
      collection: (
        'A'..Heb412Gen::ApplicationHelper::MAXCOL
      ).to_a,  # AMJ es mÃ¡ximo en gnumeric
      label: false
    %>
  </div>
  <div class="div-tabla-celda">
    <%= f.input :id, as: :hidden %>
    <%= f.submit "Eliminar",
      formaction: heb412_gen.eliminar_campoplantillahcm_path(
        id: f.object.id, index: f.index
      ),
      formmethod: :delete,
      formnovalidate: true,
      class: 'btn btn-sm btn-danger',
      data: {
        turbo_frame: "campoplantillahcm_#{f.index}",
        disable_with: false
      } %>
    <div><%= f.error_notification %></div>
  </div>
<% end %>
