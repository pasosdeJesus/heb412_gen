
<% ab = ::Ability.new %>
<% cord = Ability::campos_plantillas.keys.map do |n| %>
  <% ['Resumen de ' + n.to_s, n.to_s] %>
<% end %>
<% cord.sort! { |x,y| x[1] <=> y[1] } %>
<%= f.input :vista, 
  collection: cord,
  include_blank: false,
  selected: @registro.vista.nil? ? 'Usuario' : @registro.vista,
  input_html: {
    "data-toggle" => 'tooltip',
    "title" => 'Desde que parte de la aplicación se podrá llenar la plantilla'
  } %>
  
